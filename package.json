{
  "name": "@dash-ui/transition",
  "version": "0.4.0",
  "description": "A library for creating CSS transitions with dash-ui",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredlunde.com/)",
  "homepage": "https://github.com/dash-ui/transition#readme",
  "repository": "github:dash-ui/transition",
  "bugs": "https://github.com/dash-ui/transition/issues",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "files": [
    "/dist",
    "/src",
    "/types"
  ],
  "scripts": {
    "build": "lundle build --umd-case camel",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,js,md,yml,json}\"",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "test": "jest",
    "validate": "lundle check-types && pnpm run lint && jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "types": "types/index.d.ts",
  "peerDependencies": {
    "@dash-ui/styles": ">=0.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@dash-ui/jest": "^2.0.0",
    "@dash-ui/styles": "^1.0.0-alpha.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.6.0",
    "@swc-node/jest": "^1.3.2",
    "@types/jest": "latest",
    "cz-conventional-changelog": "latest",
    "eslint": "^7.32.0",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "lundle": "latest",
    "prettier": "latest",
    "typescript": "latest"
  },
  "keywords": [
    "css animation",
    "css spring",
    "css transition",
    "css-in-js animation",
    "css-in-js transition",
    "css-in-react animation",
    "css-in-react transition"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "/types",
    "test",
    "*.config.js"
  ],
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/dash-transition.js",
      "source": "./src/index.ts",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc-node/jest"
      ]
    }
  },
  "lint-staged": {
    "package.json": [
      "pnpx -y prettier-package-json --write"
    ],
    "**/*.{ts,js}": [
      "eslint --ext .ts,.js --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "source": "src/index.ts",
  "unpkg": "dist/umd/dash-transition.js"
}
